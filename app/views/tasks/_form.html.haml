= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :description
    = f.text_field :description

  .field
    = f.label "Completada"
    = f.check_box :status, {:class => "myclass", :style => "mystyle"}, "complete", "incomplete"

  .actions
    = f.submit 'Save'
