= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :status
    = f.select :status, [['Completo', 'complete'], ['Incompleto', 'incomplete']], {:name => "department", :include_blank => 'Estado(*)' }, :required => true
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
